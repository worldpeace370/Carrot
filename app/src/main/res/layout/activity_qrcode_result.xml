<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.lebron.activity.QRCodeActivity" >

    <include android:id="@+id/include1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/title_qrcode"/>

    <TextView android:id="@+id/textView_showInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:clickable="true"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:text="O(∩_∩)O哈哈~"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/include1"
        />
    <ImageView android:id="@+id/imageView_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView_showInfo"
        />

</RelativeLayout>

